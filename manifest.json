{
    "manifest_version": 2,
    "name": "Gmail extension",
    "version": "0.1.0",
    "description": "Gmail extension for Chrome",
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "content_scripts": [
        {
            "css": [
                "styles.css",
                "typography.css"
            ],
            "js": [
                "scripts.js"
            ],
            "matches": [
                "https://mail.google.com/*"
            ]
        }
    ]
}